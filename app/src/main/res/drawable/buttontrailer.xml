<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color" /> <!-- Màu khi nhấn -->
            <corners android:radius="12dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color" /> <!-- Màu mặc định -->
            <corners android:radius="12dp" /> <!-- Bo góc -->
        </shape>
    </item>
</selector>
