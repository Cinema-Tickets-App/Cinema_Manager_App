<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode using Material Components -->
    <style name="Base.Theme.AppDark" parent="Theme.Material3.DynamicColors.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>

<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Thêm các màu khác nếu cần -->
    </style>

    <style name="Theme.CinemaManagerApp" parent="Base.Theme.AppDark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <!-- Thêm các tùy chọn khác nếu cần -->
    </style>

    <!-- Button style for dark mode -->
    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blue_bld</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textContent">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item> <!-- Màu trắng cho text -->
        <item name="lineHeight">17sp</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Màu trắng cho tiêu đề -->
    </style>
</resources>
