<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".ui.activities.ChooseChair">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <!-- Nút quay lại -->


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBack"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/back"
            android:backgroundTint="@color/green_chaleston"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="0dp" />


        <!-- TextView đầu tiên -->
        <TextView
            android:id="@+id/tvChonGhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="Chọn ghế"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <!-- TextView thứ hai -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tên phòng"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvChonGhe"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Img_SeatCondition"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"

            android:padding="6dp"
            android:src="@drawable/icon_chair"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/main_color"
            android:padding="6dp"
            android:text="Ghế trống"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/Img_SeatCondition2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="220dp"
            android:layout_marginBottom="30dp"

            android:padding="6dp"
            android:src="@drawable/icon_chair"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red_exp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="213dp"
            android:layout_marginTop="25dp"
            android:background="@color/main_color"
            android:padding="6dp"
            android:text="Đã chọn"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="A"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="B"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="D"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="E"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="F"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="G"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="H"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="I"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="J"
            android:textColor="@color/red"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_ChairList"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvPaymentSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="Thanh toán : ...đ"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcv_ChairList" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_payment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:background="@color/green_chaleston"
        android:text="Di đến thanh toán"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentSum" />

    <TextView
        android:id="@+id/tvSelectedSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:text="Số ghế đã chọn: 0"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_to_payment" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:text="Giờ công chiếu : 12/10/2024 ~ 12h10'"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedSeats" />


</androidx.constraintlayout.widget.ConstraintLayout>